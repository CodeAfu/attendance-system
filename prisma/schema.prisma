generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_POSTGRES_DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String
  role           String
  updatedAt      DateTime @updatedAt
  createdAt      DateTime @default(now())
}

model TraineeRecord {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  nric      String   @unique
  dob       String?
  email     String?
  contactNo String?
  employer  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
